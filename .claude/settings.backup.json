{
  "permissions": {
    "allow": [
      "Bash(./Scripts/SaneMaster.rb:*)",
      "Bash(xcodegen:*)",
      "Bash(bundle exec:*)",
      "Bash(killall:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(brew:*)",
      "Bash(swiftlint:*)",
      "Bash(mockolo:*)",
      "Bash(periphery:*)",
      "Bash(lefthook:*)",
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(open:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:*)",
      "Bash(curl:*)",
      "Bash(which:*)",
      "Bash(ruby:*)",
      "Bash(/opt/homebrew/opt/ruby/bin/*:*)",
      "mcp__memory__*",
      "mcp__apple-docs__*",
      "mcp__context7__*",
      "mcp__github__*"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [{"hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/prompt_analyzer.rb", "timeout": 5}]}],
    "SessionStart": [{"hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/session_start.rb"}]}],
    "PreToolUse": [
      {"matcher": "Edit", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/circuit_breaker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/edit_validator.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/sop_mapper.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/path_rules.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/saneloop_enforcer.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/research_before_code.rb", "timeout": 5}
      ]},
      {"matcher": "Write", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/circuit_breaker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/edit_validator.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/sop_mapper.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/path_rules.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/saneloop_enforcer.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/research_before_code.rb", "timeout": 5}
      ]},
      {"matcher": "Skill", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/skill_validator.rb", "timeout": 5}]},
      {"matcher": "Bash", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/circuit_breaker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5}
      ]},
      {"matcher": "Task", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5}]},
      {"matcher": "NotebookEdit", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/circuit_breaker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/edit_validator.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/saneloop_enforcer.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5}
      ]},
      {"matcher": "Read", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5}]},
      {"matcher": "Grep", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5}]},
      {"matcher": "Glob", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/process_enforcer.rb", "timeout": 5}]}
    ],
    "PostToolUse": [
      {"matcher": "WebSearch", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5}]},
      {"matcher": "WebFetch", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5}]},
      {"matcher": "mcp__memory__*", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5}]},
      {"matcher": "mcp__apple-docs__*", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5}]},
      {"matcher": "mcp__context7__*", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5}]},
      {"matcher": "mcp__github__*", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5}]},
      {"matcher": "Edit", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/two_fix_reminder.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/verify_reminder.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/test_quality_checker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/session_summary_validator.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/pattern_learner.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}
      ]},
      {"matcher": "Bash", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/failure_tracker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/deeper_look_trigger.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/version_mismatch.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/pattern_learner.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}
      ]},
      {"matcher": "Grep", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/deeper_look_trigger.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}
      ]},
      {"matcher": "Read", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/deeper_look_trigger.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}
      ]},
      {"matcher": "Write", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/test_quality_checker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/session_summary_validator.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/pattern_learner.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}
      ]},
      {"matcher": "Glob", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/research_tracker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}
      ]},
      {"matcher": "Task", "hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}]},
      {"matcher": "NotebookEdit", "hooks": [
        {"type": "command", "command": "ruby ~/.claude/hooks/test_quality_checker.rb", "timeout": 5},
        {"type": "command", "command": "ruby ~/.claude/hooks/audit_logger.rb", "timeout": 5}
      ]}
    ],
    "Stop": [{"hooks": [{"type": "command", "command": "ruby ~/.claude/hooks/stop_validator.rb", "timeout": 5}]}]
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true
  }
}
