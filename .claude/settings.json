{
  "permissions": {
    "allow": [
      "Bash(./Scripts/SaneMaster.rb:*)",
      "Bash(xcodegen:*)",
      "Bash(bundle exec:*)",
      "Bash(killall:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(brew:*)",
      "Bash(swiftlint:*)",
      "Bash(mockolo:*)",
      "Bash(periphery:*)",
      "Bash(lefthook:*)",
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(open:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:*)",
      "Bash(curl:*)",
      "Bash(which:*)",
      "Bash(ruby:*)",
      "Bash(/opt/homebrew/opt/ruby/bin/*:*)",
      "mcp__memory__*",
      "mcp__apple-docs__*",
      "mcp__context7__*",
      "mcp__github__*"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ./scripts/hooks/session_start.rb ] && ruby ./scripts/hooks/session_start.rb || true",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ./scripts/hooks/saneprompt.rb ] && ruby ./scripts/hooks/saneprompt.rb || true",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ./scripts/hooks/sanetools.rb ] && ruby ./scripts/hooks/sanetools.rb || true",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ./scripts/hooks/sanetrack.rb ] && ruby ./scripts/hooks/sanetrack.rb || true",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ./scripts/hooks/sanestop.rb ] && ruby ./scripts/hooks/sanestop.rb || true",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true,
    "claude-mem@thedotmack": true
  }
}
