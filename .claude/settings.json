{
  "permissions": {
    "allow": [
      "Bash(./scripts/SaneMaster.rb:*)",
      "Bash(xcodegen:*)",
      "Bash(bundle exec:*)",
      "Bash(killall:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(brew:*)",
      "Bash(swiftlint:*)",
      "Bash(mockolo:*)",
      "Bash(periphery:*)",
      "Bash(lefthook:*)",
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(open:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:*)",
      "Bash(curl:*)",
      "Bash(which:*)",
      "Bash(ruby:*)",
      "Bash(/opt/homebrew/opt/ruby/bin/*:*)",
      "mcp__apple-docs__*",
      "mcp__context7__*",
      "mcp__github__*",
      "mcp__gemini__*",
      "mcp__XcodeBuildMCP__*",
      "mcp__macos-automator__*"
    ]
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true,
    "claude-mem@thedotmack": true,
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "sane-skills@local": true
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$CLAUDE_CODE\" ] && [ -f .saneprocess ] && ruby ~/SaneApps/infra/SaneProcess/scripts/hooks/session_start.rb || true",
            "timeout": 15
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$CLAUDE_CODE\" ] && [ -f .saneprocess ] && ruby ~/SaneApps/infra/SaneProcess/scripts/hooks/saneprompt.rb || true",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$CLAUDE_CODE\" ] && [ -f .saneprocess ] && ruby ~/SaneApps/infra/SaneProcess/scripts/hooks/sanetools.rb || true",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$CLAUDE_CODE\" ] && [ -f .saneprocess ] && ruby ~/SaneApps/infra/SaneProcess/scripts/hooks/sanetrack.rb || true",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "ruby ~/SaneApps/infra/SaneProcess/scripts/hooks/swift_format.rb || true",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$CLAUDE_CODE\" ] && [ -f .saneprocess ] && ruby ~/SaneApps/infra/SaneProcess/scripts/hooks/sanestop.rb || true",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
